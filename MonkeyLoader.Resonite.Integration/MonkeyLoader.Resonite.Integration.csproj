<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net472</TargetFramework>
    <AssemblyTitle>MonkeyLoader.Resonite.Integration</AssemblyTitle>
    <AssemblyFileName>$(AssemblyTitle).dll</AssemblyFileName>
    <RootNamespace>MonkeyLoader.Resonite</RootNamespace>
  </PropertyGroup>

  <Target Name="PackProject" AfterTargets="PostBuildEvent">
    <MSBuild Projects="$(MSBuildProjectFile)" Properties="NuPkgName=MonkeyLoader.GamePacks.Resonite" Targets="PackNugetPkg">
    </MSBuild>
  </Target>

  <ItemGroup>
    <Compile Remove="InstantResoniteLog.cs" />
  </ItemGroup>

  <ItemGroup>
    <None Include="InstantResoniteLog.cs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="MonkeyLoader" Version="0.5.0-beta" />
    <PackageReference Include="MonkeyLoader.GamePacks.Unity" Version="0.4.0-beta" />
    <PackageReference Include="PolySharp" Version="1.14.1">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="Resonite.Assembly-CSharp" Version="1.0.0" />
    <PackageReference Include="Resonite.Elements.Core" Version="1.0.0" />
    <PackageReference Include="Resonite.FrooxEngine" Version="2024.3.1.1178" />
    <PackageReference Include="Resonite.UnityEngine.CoreModule" Version="1.0.0" />
    <PackageReference Include="Resonite.UnityEngine.TextRenderingModule" Version="1.0.0" />
    <PackageReference Include="System.Text.Json" Version="8.0.2" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\MonkeyLoader.Resonite.Data\MonkeyLoader.Resonite.Data.csproj" />
  </ItemGroup>
</Project>
